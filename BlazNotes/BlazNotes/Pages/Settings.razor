@page "/settings"

<h1>Settings</h1>
<div class="card card-@Theme">
    <div class="card-body">
        <p style= "color: blue;"><b>A little preview of the future...</b></p>
        <button class="btn btn-primary" onclick="@ChangeClass">Change</button>
    </div>
</div>
<p>@Theme</p>

@functions
{
    [CascadingParameter(Name = "Theme")] string Theme { get; set; }

    private bool isLight;

    protected override void OnInit()
    {
        if (Theme == "light")
        {
            isLight = true;
        }
        else
        {
            isLight = false;
        }
    }

    void ChangeClass()
    {
        isLight = !isLight;

        if (isLight == true)
        {
            Theme = "light";
        }
        else
        {
            Theme = "dark";
        }

        base.StateHasChanged();
    }
}