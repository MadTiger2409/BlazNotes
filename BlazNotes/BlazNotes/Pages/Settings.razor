@page "/settings"
@inherits SettingsComponent

<h1>Settings</h1>
<div class="card card-@Theme">
    <div class="card-body">
        <b>Theme: </b>
        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="customSwitches">
            <label class="custom-control-label" for="customSwitches" onclick="@ChangeClass">@Theme</label>
        </div>
        @*<button class="btn btn-primary btn-primary-@Theme" onclick="@ChangeClass">@Theme.UppercaseFirst()</button>*@
    </div>
    
</div>